
<div class="container">

    <div class="container">
        <div class="row">
            <div class="col-md-12 text-center" id="">
                <h1>Burger Castle</h1>
                <img src="https://static.vecteezy.com/system/resources/thumbnails/000/147/310/small/free-hand-drawn-vector-burger-illustration.jpg" alt="">
            </div>

        <div class="row">

            <div class="col-md-12 text-center">
                <h2>Add a Burger</h2>
                <form class="create-form">

                    <div class="form-group">
                        <label for="ca">Burger Name:</label>
                        <input type="text" id="newburger" name="name">
                    </div>

                    <button type="submit">Add Burger</button>
                </form>
            </div>
        </div>
    </div>
    </div>

        <div class="row">

        <div class="col-md-6 to-eat-container">
                <h2>Burgers to Eat:</h2>
            <hr>
            <ul>
                {{#each burgers}}
                {{#unless devoured}}
                <span>{{this.id}} - {{this.burger_name}}</span>
                <button type="button" class="eatburger btn btn-warning" data-id="{{this.id}}"
                    data-newDevoured="{{devour}}"><span>Eat</span></button>
                <hr>
                {{/unless}}
                {{/each}}
            </ul>
        </div>

        <div class="col-md-6 devoured-container">
                <h2>Burgers Eaten:</h2>
            <hr>
            <ul>
                {{#each burgers}}
                {{#if devoured}}
                <span><strong> {{this.id}} - {{this.burger_name}} </strong></span>
                <button type="button" class="removeburger btn btn-danger" data-id="{{this.id}}"
                    data-newDevoured="{{devour}}"><span>Delete</span></button>
                <hr>
                {{/if}}
                {{/each}}
            </ul>
        </div>
        </div>

</div>